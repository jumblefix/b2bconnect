{
  "name": "@b2bconnect/server",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "compile": "tsc --project ./",
    "check": "tsc --project ./ --noEmit",
    "copy": "copyfiles -u 1 src/**/*.graphql dist",
    "dev": "npm run gen-types && NODE_ENV=development nodemon --exec ts-node --files src/index.ts",
    "start": "NODE_ENV=production ts-node --transpile-only src/index.ts",
    "start:node": "rimraf ./dist && npm run compile && npm run copy && NODE_ENV=production node ./dist/",
    "gen-types": "ts-node --transpile-only --files ./src/utils/create-types.ts",
    "debug": "NODE_ENV=development node --inspect -r ts-node/register/transpile-only src/index.ts",
    "test": "jest --bail --runInBand --forceExit --detectOpenHandles",
    "test:w": "jest --watch --runInBand",
    "test:ci": "CI=true jest --runInBand --forceExit --detectOpenHandles --findRelatedTests",
    "lint": "tslint --project tsconfig.json -c tslint.json 'src/**/*.ts' --fix",
    "precommit": "lint-staged",
    "create:migration": "ts-node ./node_modules/.bin/typeorm migration:generate -n Create -c production",
    "start:docker": "docker-compose up -d"
  },
  "dependencies": {
    "@b2bconnect/common": "1.0.0",
    "@gql2ts/from-schema": "^1.8.2",
    "@gql2ts/types": "^1.8.1",
    "apollo-errors": "^1.9.0",
    "axios": "^0.18.0",
    "bcryptjs": "^2.4.3",
    "connect-redis": "^3.3.3",
    "dotenv-safe": "^6.0.0",
    "express-rate-limit": "^3.1.0",
    "express-session": "^1.15.6",
    "faker": "^4.1.0",
    "glob": "^7.1.2",
    "graphql": "^0.13.2",
    "graphql-tag": "^2.9.2",
    "graphql-yoga": "^1.16.0",
    "helmet": "^3.13.0",
    "iconv-lite": "^0.4.23",
    "ioredis": "^4.0.0",
    "lodash": "^4.17.10",
    "merge-graphql-schemas": "^1.5.3",
    "mysql2": "^1.6.1",
    "nodemailer": "^4.6.8",
    "nodemailer-smtp-transport": "^2.7.4",
    "rate-limit-redis": "^1.5.0",
    "slugify": "^1.3.1",
    "sqlite3": "^4.0.2",
    "typeorm": "^0.2.7",
    "uuid": "^3.3.2",
    "yup": "^0.26.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.1",
    "@types/connect-redis": "^0.0.7",
    "@types/express-rate-limit": "^2.9.3",
    "@types/faker": "^4.1.3",
    "@types/glob": "^5.0.35",
    "@types/helmet": "^0.0.40",
    "@types/ioredis": "^4.0.1",
    "@types/jest": "^23.3.1",
    "@types/lodash": "^4.14.116",
    "@types/nodemailer": "^4.6.2",
    "@types/nodemailer-smtp-transport": "^2.7.4",
    "@types/uuid": "^3.4.3",
    "@types/ws": "^6.0.0",
    "@types/yup": "^0.24.8",
    "babel-core": "^6.26.3",
    "babel-jest": "^23.4.2",
    "copyfiles": "^2.0.0",
    "husky": "^0.14.3",
    "jest": "^23.5.0",
    "lint-staged": "^7.2.2",
    "nodemon": "^1.18.3",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.1.3",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.9.2",
    "tslint-config-prettier": "^1.14.0",
    "typescript": "^3.0.1"
  },
  "lint-staged": {
    "*.ts": [
      "yarn lint",
      "yarn test:ci",
      "git add ."
    ]
  }
}
